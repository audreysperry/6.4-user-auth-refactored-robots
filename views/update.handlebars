
<form action="/robot/update" method="post">
  <input type="hidden" name="id" value="{{_id}}">
  <div class="form-group">
    <label for="Name">Full Name</label>
    <input type="name" class="form-control" name="name" id="name" value="{{name}}">
  </div>
  <div class="form-group">
    <img src="{{avatar}}" alt="">
    <label for="Image">Profile Picture</label>
    <input type="text" class="form-control" name="avatar" id="avatar" value="Paste new URL here:">
  </div>
  <div class="form-group">
    <label for="email">Email Address</label>
    <input type="email" class="form-control" name="email" id="email" value="{{email}}">
  </div>
  <div class="form-group">
    <label for="University">Educational Experience</label>
    <input type="text" class="form-control" name="university" id="university" value="{{university}}">
  </div>
  <div class="form-group">
    <label for="job">Current Employment</label>
    <input type="text" class="form-control" name="job" id="job" value="Job">
  </div>
  <div class="form-group">
    <label for="company">Current Employer</label>
    <input type="text" class="form-control" name="company" id="company" value="{{company}}">
  </div>
  <div class="form-group">
    <label for="skills">List your Skills</label>
    <input type="text" class="form-control" name="skills" id="skills" value="{{skills}}">
  </div>
  <div class="form-group">
    <label for="phone">Phone Number</label>
    <input type="text" class="form-control" name="phone" id="phone" value="{{phone}}">
  </div>
  <h3>Address</h3>
  <div class="form-group">
    <label for="Address">Street Number</label>
    <input type="text" class="form-control" name="street_num" value="{{address.street_num}}">
  </div>
  <div class="form-group">
    <label for="Address">Street Name</label>
    <input type="text" class="form-control" name="street_name" value="{{address.street_name}}">
  </div>
  <div class="form-group">
    <label for="Address">City</label>
    <input type="text" class="form-control" name="city" value="{{address.city}}">
  </div>
  <div class="form-group">
    <label for="Address">State</label>
    <input type="text" class="form-control" name="state_or_province" value="{{address.state_or_province}}">
  </div>
  <div class="form-group">
    <label for="Address">Postal Code</label>
    <input type="text" class="form-control" name="postal_code" value="{{address.postal_code}}">
  </div>
  <div class="form-group">
    <label for="Address">Country</label>
    <input type="text" class="form-control" name="country" value="{{address.country}}">
  </div>
  <button type="submit" class="btn btn-default">Update Profile</button>
</form>
