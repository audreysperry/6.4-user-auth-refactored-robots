<header> <h2 class="robot-header">Robot LinkedIn</h2> </header>

<a href="/logout/" class = "btn btn-danger">Logout</a>


  <h1 class="robot-name">{{currentProfile.name}}</h1>
  <img src="{{currentProfile.avatar}}" alt="">
  <a class= "btn btn-info" href="/robot/update">Update profile</a>



<div class="wrapper">


{{#each profiles}}
{{#if job}}
<a class="robot-link" href="/robot/{{_id}}"><div class="robot">
  <img src="{{avatar}}" alt="">
  <h1 class="robot-name">{{name}}</h1>
  <div class="career">
    <span>{{job}},</span>
    <span>{{company}}</span>
  </div>

</div></a>
{{else}}

<a class="robot-link" href="/robot/{{id}}"><div class="robot">
  <img src="{{avatar}}" alt="">
  <h1 class="robot-name">{{name}}</h1>
  <p class="hire-robot">Available for hire</p>
</div></a>
{{/if}}
{{/each}}

</div>
